@model RepositoryUoWExample.Models.Appointment

@{
    ViewBag.Title = "Create Appointment";
}

<h2>Create Appointment</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PatientId"></label>
        <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientList">
            <option value="">-- Select Patient --</option>
        </select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AppointmentDateTime"></label>
        <input asp-for="AppointmentDateTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="AppointmentDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Reason"></label>
        <input asp-for="Reason" class="form-control" />
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Book Appointment</button>
    <a href="@Url.Action("Index", "Appointment")" class="btn btn-primary">Back >></a>
</form>
