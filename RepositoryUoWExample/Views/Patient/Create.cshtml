@model RepositoryUoWExample.Models.Patient

@{
    ViewBag.Title = "Register Patient";
}

<h2>Register Patint</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DateOfBirth)
            @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", type = "date" })

        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Gender)
            @Html.DropDownListFor(m => m.Gender, new SelectList(new[] {
        "Male", "Female", "Other"
        }), "Select Gender", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ContactNumber)
            @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

        <a href="@Url.Action("Index", "Patient")" class="btn btn-primary">Back >></a>

    </div>
}
